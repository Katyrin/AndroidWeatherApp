<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="?attr/listPreferredItemPaddingStart">

    <LinearLayout
        android:id="@+id/scrollLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/between_layouts">

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@string/city"
                android:textSize="@dimen/head"
                android:textStyle="bold" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/citySelectionFAB"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/between_layouts"
                android:layout_weight="1"
                android:clickable="true"
                android:contentDescription="@string/city_selection"
                android:focusable="true"
                app:srcCompat="@drawable/ic_baseline_location_city_24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/between_layouts">

            <TextView
                android:id="@+id/temperatureTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/t"
                android:textColor="?android:attr/colorActivatedHighlight"
                android:textSize="@dimen/big_size" />

            <ImageView
                android:id="@+id/weatherImageView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/weather_image"
                app:srcCompat="@drawable/cloud1" />

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color"
            android:padding="@dimen/between_layouts">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/between_layouts">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/tomorrow"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t"
                    android:textSize="@dimen/thirty_sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_image"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/snow" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/between_layouts">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/next_day"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t"
                    android:textSize="@dimen/thirty_sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_image"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/weather" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/between_layouts">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/next_day"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t"
                    android:textSize="@dimen/thirty_sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_image"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/cloudy3" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/between_layouts">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="@string/next_day"
                    android:textSize="@dimen/thirty_sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t"
                    android:textSize="@dimen/thirty_sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_image"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/sun" />
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/dayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/today"
            android:textSize="@dimen/head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/between_layouts">

            <TextView
                android:id="@+id/windTextView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/speed"
                android:textSize="@dimen/head2" />

            <ImageView
                android:id="@+id/windImageView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/wind"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/wind" />

            <TextView
                android:id="@+id/humidityTextView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/percent"
                android:textSize="@dimen/head2" />

            <ImageView
                android:id="@+id/humidityImageView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/humidity"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/rainy" />

            <TextView
                android:id="@+id/pressureTextView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/pressure"
                android:textSize="@dimen/head2" />

            <ImageView
                android:id="@+id/pressureImageView"
                android:layout_width="@dimen/zero_size"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="@string/pressure_text"
                android:scaleType="fitStart"
                app:srcCompat="@drawable/barometer" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/cityInformationImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="?attr/listPreferredItemPaddingStart"
            android:background="@android:color/transparent"
            android:contentDescription="@string/city_information"
            app:srcCompat="@drawable/ic_baseline_info_24" />

    </LinearLayout>
</ScrollView>