<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FragmentPadding">
        <item name="android:padding">@dimen/margin</item>
    </style>

    <style name="MarginTablet">
        <item name="android:layout_marginStart">@dimen/margin</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:layout_marginEnd">@dimen/margin</item>
        <item name="android:layout_marginRight">@dimen/margin</item>
    </style>

    <style name="MyTheme">
        <item name="android:layout_marginBottom">@dimen/between_layouts</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MyTheme.SimpleTextSize" parent="MyTheme">
        <item name="android:textSize">@dimen/head2</item>
    </style>

    <style name="MyTheme.SimpleTextSize.Background" parent="MyTheme.SimpleTextSize">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyTheme.HeadStyle" parent="MyTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/head</item>
    </style>

    <style name="MyTheme.HeadStyle.Bold" parent="MyTheme.HeadStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyTheme.HeadStyle.Bold.Orange" parent="MyTheme.HeadStyle.Bold">
        <item name="android:textColor">?android:attr/colorActivatedHighlight</item>
    </style>

    <style name="ForecastStyle">
        <item name="android:textColor">?android:attr/colorActivatedHighlight</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_size</item>
    </style>
</resources>