<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/mountain"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mountains" />

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView">

        <LinearLayout
            android:id="@+id/scrollLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="?attr/listPreferredItemPaddingStart">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/between_layouts">

                <ImageButton
                    android:id="@+id/addCityButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/add_city"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_baseline_add_24" />

                <TextView
                    android:id="@+id/cityTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="9"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textSize="36sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/between_layouts">

                <TextView
                    android:id="@+id/temperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t"
                    android:textColor="?android:attr/colorActivatedHighlight"
                    android:textSize="@dimen/big_size" />

                <ImageView
                    android:id="@+id/weatherImageView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_image"
                    app:srcCompat="@drawable/cloud1" />

            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background_color"
                android:elevation="@dimen/elevation">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/between_layouts">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/tomorrow"
                        android:textSize="@dimen/thirty_sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/t"
                        android:textSize="@dimen/thirty_sp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="@dimen/zero_size"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/weather_image"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/snow" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/between_layouts">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/next_day"
                        android:textSize="@dimen/thirty_sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/t"
                        android:textSize="@dimen/thirty_sp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/zero_size"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/weather_image"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/weather" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/between_layouts">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/next_day"
                        android:textSize="@dimen/thirty_sp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/t"
                        android:textSize="@dimen/thirty_sp" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="@dimen/zero_size"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/weather_image"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/cloudy3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/between_layouts">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/next_day"
                        android:textSize="@dimen/thirty_sp" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/t"
                        android:textSize="@dimen/thirty_sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="@dimen/zero_size"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:contentDescription="@string/weather_image"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/sun" />
                </TableRow>
            </TableLayout>

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/today"
                android:textSize="@dimen/head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/between_layouts">

                <TextView
                    android:id="@+id/windTextView"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/speed"
                    android:textSize="@dimen/head2"
                    android:layout_width="@dimen/zero_size" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/wind"
                    android:contentDescription="@string/wind" />

                <TextView
                    android:id="@+id/humidityTextView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/percent"
                    android:textSize="@dimen/head2" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/rainy"
                    android:contentDescription="@string/humidity"/>

                <TextView
                    android:id="@+id/pressureTextView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pressure"
                    android:textSize="@dimen/head2" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/barometer"
                    android:contentDescription="@string/pressure_text"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>