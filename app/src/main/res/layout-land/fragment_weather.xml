<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView android:id="@+id/mainScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="@id/imageView"
    app:layout_constraintEnd_toEndOf="@id/imageView"
    app:layout_constraintStart_toStartOf="@id/imageView"
    app:layout_constraintTop_toTopOf="@id/imageView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="?attr/listPreferredItemPaddingEnd">


    <LinearLayout
        android:id="@+id/scrollLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/firstLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="@dimen/between_layouts"
            android:paddingRight="@dimen/between_layouts">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/between_layouts">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/citySelectionFAB"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/between_layouts"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:contentDescription="@string/city_selection"
                    android:focusable="true"
                    app:srcCompat="@drawable/ic_baseline_location_city_24" />

                <TextView
                    android:id="@+id/cityName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="@string/city"
                    android:textSize="36sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/between_layouts">

                <TextView
                    android:id="@+id/temperatureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/t"
                    android:textColor="?android:attr/colorActivatedHighlight"
                    android:textSize="@dimen/big_size" />

                <ImageView
                    android:id="@+id/weatherImageView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/weather_image"
                    app:srcCompat="@drawable/cloud1" />

            </LinearLayout>

            <TextView
                android:id="@+id/dayTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/today"
                android:textSize="@dimen/head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/between_layouts">

                <TextView
                    android:id="@+id/windTextView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/speed"
                    android:textSize="@dimen/head2" />

                <ImageView
                    android:id="@+id/windImageView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/wind"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/wind" />

                <TextView
                    android:id="@+id/humidityTextView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/percent"
                    android:textSize="@dimen/head2" />

                <ImageView
                    android:id="@+id/humidityImageView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/humidity"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/rainy" />

                <TextView
                    android:id="@+id/pressureTextView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pressure"
                    android:textSize="@dimen/head2" />

                <ImageView
                    android:id="@+id/pressureImageView"
                    android:layout_width="@dimen/zero_size"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:contentDescription="@string/pressure_text"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/barometer" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daysRV"
                android:nestedScrollingEnabled="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_color"
                android:padding="@dimen/between_layouts"/>

            <ImageButton
                android:id="@+id/cityInformationImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="?attr/listPreferredItemPaddingStart"
                android:background="@android:color/transparent"
                android:contentDescription="@string/city_information"
                app:srcCompat="@drawable/ic_baseline_info_24" />

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>